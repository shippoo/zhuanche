<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 提示框公共样式 -->
    <style name="dialog_style_comment" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 加载条 -->
    <style name="progress_anim_style" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progress_anim</item>
    </style>
    <!-- 图片上传 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:width">25dp </item>
        <item name="android:height">25dp</item>
    </style>
    <!-- Time-Picker日期选择器样式 -->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomCheckboxAssess" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_assess</item>
        <item name="android:width">25dp </item>
        <item name="android:height">25dp</item>
    </style>

    <style name="TextNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="accept_TextNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="accept_DetailStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <!-- 司机端的我的界面五个按钮 -->
    <style name="ContentMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/rg_menu_textcolor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <!-- 身份审核 -->
    <style name="LeftTitleTextStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RightTextStyle" parent="@style/LeftTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="LeftTitleTextStyle2">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- EditText右边样式 -->
    <style name="RightEditTextStyle" parent="@style/LeftTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 底部弹出对话框style -->
    <style name="CustomBottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/bottom_anim_style</item>
    </style>

    <style name="bottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_from_bottom</item>
    </style>
    <!-- 文字基本样式 -->
    <style name="BasicTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 我的账户样式 -->
    <style name="DriverAccount" parent="@style/BasicTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 钱 -->
    <style name="MoneyStyle" parent="@style/BasicTextStyle">
        <item name="android:textColor">@color/price_color</item>
    </style>
    <!-- 分割线样式 -->
    <style name="DivideStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/divide_color</item>
    </style>
    <!-- 司机订单容器样式 -->
    <style name="DriverOrderContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 司机订单菜单样式 -->
    <style name="DriverOrderMenuStyle" parent="@style/BasicTextStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/textcolor_order_selector</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 司机订单菜单分割线样式 -->
    <style name="DriverOrderMenuDivideStyle">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">#33000000</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 設置頁面樣式 -->
    <style name="SettingContainerStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!-- 設置頁面子條目 字体样式 -->
    <style name="SettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 設置頁面子條目 图标样式 -->
    <style name="SettingRightImgStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/right_arrow_pressed</item>
    </style>
    <!-- 設置頁面子條目 右侧字体样式 -->
    <style name="SettingRightTextStyle" parent="@style/BasicTextStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 按鈕樣式 -->
    <style name="BaseButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/bg_bt_selector</item>
    </style>
    <!-- 支付左侧字体样式 -->
    <style name="PayLeftFontStyle" parent="@style/BasicTextStyle">
        <item name="android:drawableLeft">@drawable/weixin</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:text">微信支付</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PayRightButtonStyle" parent="@style/CustomCheckboxAssess">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="GreenButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/btn_bg_page_green</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/textcolor_selector</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>