<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 提示框公共样式 -->
    <style name="dialog_style_comment" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 加载条 -->
    <style name="progress_anim_style" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progress_anim</item>
    </style>
    <!-- 图片上传 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:width">25dp </item>
        <item name="android:height">25dp</item>
    </style>
    <!-- Time-Picker日期选择器样式 -->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomCheckboxAssess" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_assess</item>
        <item name="android:width">25dp </item>
        <item name="android:height">25dp</item>
    </style>

    <style name="TextNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="accept_TextNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="accept_DetailStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <!-- 司机端的我的界面五个按钮 -->
    <style name="ContentMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/rg_menu_textcolor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
	<!-- 身份审核 -->
	<style name="LeftTitleTextStyle">
	    <item name="android:layout_width">80dp</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:paddingTop">10dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:paddingBottom">10dp</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	<style name="RightTextStyle" parent="@style/LeftTitleTextStyle">
	     <item name="android:layout_width">wrap_content</item>
	     <item name="android:textColor">@color/textColor</item>
	</style>
</resources>