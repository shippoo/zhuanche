<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/divide_color" />

    <RelativeLayout
        android:id="@+id/info_cotainer_signed"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/view1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_left"
            android:text="我的签名"
            android:textColor="@color/info_textColor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/info_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/info_cotainer_signed"
        android:layout_marginTop="8dp"
        android:background="@color/divide_color" />

    <RelativeLayout
        android:id="@+id/info_cotainer_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2" >

        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/info_et_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入个性签名"
                android:textColor="@color/info_ItemColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/info_iv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/error" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/view3"
            android:layout_marginTop="10dp"
            android:background="@color/divide_color" />
    </RelativeLayout>

</RelativeLayout>