<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/divide_color" />

        <RelativeLayout
            android:id="@+id/info_cotainer_named"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_left"
                android:text="昵称"
                android:textColor="@color/info_textColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/info_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_down" />

            <TextView
                android:id="@+id/info_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/info_iv_arrow"
                android:text="巴黎的夜雨"
                android:textColor="@color/info_ItemColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/info_cotainer_named"
            android:layout_marginTop="8dp"
            android:background="@color/divide_color" />

        <RelativeLayout
            android:id="@+id/info_cotainer_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view2"
            android:layout_marginTop="8dp" >

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/info_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:textColor="@color/info_ItemColor"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/info_iv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/error" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/rl"
                android:background="@color/divide_color" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>