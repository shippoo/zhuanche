<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <ImageView
            android:id="@+id/layout_driver_iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/photo" />

        <TextView
            android:id="@+id/layout_driver_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_driver_iv_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/layout_driver_iv_pic"
            android:text="张师傅"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/layout_driver_tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_driver_tv_name"
            android:layout_centerVertical="true"
            android:text="粤**M8D1"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/assess_text_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/layout_driver_tv_car_name"
            android:text="比亚迪S6"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/assess_image_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_driver_tv_car_name"
            android:layout_toRightOf="@+id/layout_driver_tv_car_name"
            android:src="@drawable/yuping" />
	
        <TextView
            android:id="@+id/layout_driver_tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/assess_image_03"
            android:layout_alignLeft="@+id/assess_text_04"
            android:text="4.9"
            android:textColor="#F7F7F7"
            android:textSize="10sp" />
		<RatingBar 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:progressDrawable="@drawable/layerlist_ratingbar_bg"
		    android:numStars="5"
		    android:isIndicator="true"
		    android:layout_toLeftOf="@id/assess_image_03"
		    android:layout_below="@id/layout_driver_tv_car_name"/>
        <TextView
            android:id="@+id/layout_driver_tv_ordercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/assess_image_03"
            android:layout_alignRight="@+id/assess_text_04"
            android:text="185单"
            android:textColor="#666666"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/layout_driver_iv_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/phonelin" />
    </RelativeLayout>
	
</LinearLayout>
