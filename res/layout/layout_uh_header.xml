<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!-- 轮播图 -->
	<FrameLayout
	    android:id="@+id/uh_container_pic"
        android:layout_width="match_parent"
        android:layout_height="135dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_gridivew_gray_normal"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/home_container_guojingxiaoche"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_identity"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/newhom_car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="过境小车"
                android:textColor="#99000000"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 中间方块 -->
	<com.baidu.zhuanche.view.NoScrolledGridView
	    android:background="#33000000"
	    android:id="@+id/uh_gridview" 
	    android:numColumns="3"
	    android:listSelector="@null"
	    android:stretchMode="columnWidth"
	    android:verticalSpacing="1dp"
	    android:horizontalSpacing="1dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
   
    <!-- 中间结束 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门咨询" 
            android:textSize="16sp"
            android:textStyle="bold"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>

</LinearLayout>